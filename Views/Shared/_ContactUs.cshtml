@using bobbySaxyKennel.Models.ViewModels
@model ContactVm

@using (Html.BeginForm("ContactUs", "Home"))
{
    <div class="alert alert-warning hide-loder" id="errorSummary">
        <ul></ul>
    </div>
    <div class="form-group">
        @Html.LabelFor(a=>a.Name, new { @class = "control-label"} )
        @Html.ValidationMessageFor(a=>a.Name )
        @Html.TextBoxFor(a=>a.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Email, new { @class = "control-label" })
        @Html.ValidationMessageFor(a => a.Email)
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Message, new { @class = "control-label" })
        @Html.ValidationMessageFor(a => a.Message)
        @Html.TextAreaFor(a => a.Message, htmlAttributes: new { @class = "form-control" })
    </div>

        <button type="submit" class="btn btn-default btn-green">Send Message <img style="display: none; "  id="imgLoad" src="~/images/AjaxLoader/ringLoading1.gif" width="20" height="20" /> </button>
   

}