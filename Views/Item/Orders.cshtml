@model IEnumerable<bobbySaxyKennel.Models.Order>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="reservation-section pt-120 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="reservation-details-area">
                    <table class="table">
                        <tr>
                            <th>Order No</th>
                            <th>Item</th>
                            <th>Detail</th>
                            <th>  @Html.DisplayNameFor(model => model.DeliveryAddress)   </th>
                            <th>     @Html.DisplayNameFor(model => model.AddtionalPhoneNo) </th>
                            <th>
                                Additional Note
                            </th>
                            <td></td>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td># @item.Id</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pet.Name)
                                </td>
                                <td>
                                    Cost : NGN  @item.TotalPrice
                                    Status: @item.Status<br />
                                    Date Ordered: @item.DateTime
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeliveryAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddtionalPhoneNo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.AdditionalNote)
                                </td>

                                @*<td>
                                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                                        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                                    </td>*@
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>

</section>

   