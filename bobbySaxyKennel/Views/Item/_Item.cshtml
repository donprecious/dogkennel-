                                        else
                                        {
                                            <a class="food-button" href="@Url.Action("Menu", "Item")">Order Now <em class="fa fa-chevron-right" aria-hidden="true"></em></a>
                                        }
                                    </div>
                                    <div class="food-desc">
                                        <p>NGN @i.Amount</p>
                                        <p>@i.Description</p>

                                    </div> 
                                </div>
                            </li>
                        }
                      
                       
                    </ul>
