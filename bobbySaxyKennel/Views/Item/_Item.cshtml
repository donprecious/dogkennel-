                <div class="our-food-full">
                    <ul>
                        @foreach (var i in Model)
                        {
                            <li>
                                <div class="o-food-image" style="background-image: url(@i.ImgLocation);"></div>
                                <div class="color-def">
                                    <div class="mid-sec">
                                        <h2 class="spacer">@i.Name</h2>
                                        @if (Request.Browser.IsMobileDevice)
                                        {
                                            <a class="food-button" href="@Url.Action("Meal", "Item")">Order Now <em class="fa fa-chevron-right" aria-hidden="true"></em></a>
