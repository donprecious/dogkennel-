        <div id="primary" class="content-area">
            <main id="main" class="site-main" role="main" tabindex="-1">
                <div class="our-story-img" style="background-image: url('/images/menu-head.jpg');">
                    <div class="page-describer">
                        <h1>Menu</h1>
                        <p>View our Khaleej  Tacos tasty menu and order online.</p>
                    </div>
                </div>
                <div class="ourmenu-dl-links">
                    <ul>
                       @foreach (var i in catgory)
                       {
                           <li class="nuti-lnks">
                               <a class="nuti-aa" href="javascript:showList(@i.PetCategoyID);" title="@i.Description">@i.Name</a>
                           </li>
                       }
                        

                    </ul>
                </div> 
