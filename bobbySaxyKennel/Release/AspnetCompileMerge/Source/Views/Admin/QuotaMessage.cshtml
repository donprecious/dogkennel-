@model bobbySaxyKennel.Models.QuotaMessage

@{
    ViewBag.Title = "Message Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="myForm">
    <div class="form-center">
        <div class="title"> <h3>Message From @Model.Customer.User.UserName </h3> </div>
        <div class="form-content">
         <label class="control-label">
             Message Body
         </label>
            <div class="well">
                @Model.Message
            </div>
                <div class="form-group">             
                        <a href="@Url.Action("ReplyQuota", "Admin", new {id=Model.QuotaID })" class="btn btn-primary" ></a>
                </div>
        </div>
    </div>
</div>
@Html.Partial("_ModalNotify")

<div>
    @Html.ActionLink("Back to Messages", "Messages")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/AppScripts/postWithModel.js"></script>
}
