@model bobbySaxyKennel.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-12">

    <div class="myForm">
        <div class="form-center">
            <div class="title">
                <h4>Create account</h4>
            </div>
            <div class="form-content">
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new {  }))
{
               @Html.AntiForgeryToken()
                  
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label"})

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholer = "Email Address" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })

                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control",  placeholer = "Phone Number" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" , placeholer = "Password" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholer = "Confirm Password" })

                    </div>
                    <div class="form-group">

                        <input type="submit" class="btn btn-hash" value="Register" />

                    </div>
}
            </div>

        </div>

    </div>
   
    </div>


</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
