                complete: function () {
                    $("#imgLoad").hide();

                    $("button[type='submit']").removeAttr("disabled", true);
                },
                error: function (err) {
                    $("#myAlert1").slideDown();
                    console.log(err);
                },
                success: function (response) {
                    $("#errorSummary ul li").remove();
                    $("#errorSummary").hide();
                    if (response.status === 200) {
                        $("#txtMsg").text(response.message);
                        $("#myModal").modal();

